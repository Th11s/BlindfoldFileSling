@page "/ls/{DirectoryId}"
@using Microsoft.AspNetCore.Authorization
@using Th11s.FileSling.Services

@attribute [StreamRendering]
@attribute [Authorize(Policies.DirectoryReadAccess)]

<th11s-file-list-header directory-id="@DirectoryId"></th11s-file-list-header>
<th11s-file-upload directory-id="@DirectoryId"></th11s-file-upload>
<th11s-file-list directory-id="@DirectoryId"></th11s-file-list>

@code {
    [Parameter]
    public required string DirectoryId { get; set; }
}
