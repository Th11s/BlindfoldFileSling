{
  "compileOnSave": false,
  "include": [
    "typescript/*"
, "typescript/Components/WebComponents.ts"  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types"
    ],

    "outDir": "wwwroot/js-client"
  }
}